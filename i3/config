# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
    status_command SCRIPT_DIR=~/i3blocks-contrib i3blocks
    tray_output primary
    colors {
        background $bg-color
        separator #757575
        focused_workspace  $bg-color          $bg-color          #e0e0e0
        inactive_workspace $inactive-bg-color $inactive-bg-color #a0a0a0
        urgent_workspace   $urgent-bg-color   $urgent-bg-color   #e0e0e0
    }
}

