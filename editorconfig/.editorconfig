root = true

[*]
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
charset = utf-8

[Makefile]
indent_style = tab

[*.{c,cpp,cxx,h,hxx,hpp,hh}]
indent_size = 4

[*.{cs,csx,fs,fsx}]
indent_size = 4

[*.rb]
indent_size = 2

[*.py]
indent_size = 4

[*.rs]
indent_size = 4

[*.toml]
indent_size = 4
