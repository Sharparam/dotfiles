bindsym XF86MonBrightnessDown exec --no-startup-id xbacklight -dec 5 -time 0 && pkill -RTMIN+12 i3blocks
bindsym Shift+XF86MonBrightnessDown exec --no-startup-id xbacklight -dec 1 -time 0 && pkill -RTMIN+12 i3blocks

